<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

<Button
    android:id="@+id/qs_desc_kbd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_gravity="center"
    android:onClick="onClick"
    android:text="@string/ann"
    android:textSize="12dp" />
    
<ScrollView
    android:id="@+id/sq_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/qs_desc_kbd"
    >

<LinearLayout
    android:id="@+id/qs_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical" >
    
<Button
    android:id="@+id/qs_ann_perm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:onClick="onClick"
    android:text="@string/qs_ann_perm"
    android:textSize="12dp" />
    
<TextView
    android:id="@+id/qs_about"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:paddingBottom="5dp"
    android:text="@string/qs_ann"
    android:textSize="13sp" />

<Button 
    android:id="@+id/qs_enable_kbd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_btn1"
	/> 

<Button 
    android:id="@+id/qs_activate_kbd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_btn2"
	/> 

<Button 
    android:id="@+id/qs_sel_lang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_sel_lang"
	/> 

<Button
    android:id="@+id/qs_load_pref"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:text="@string/set_key_load_pref"
    android:visibility="gone" />

<Button 
    android:id="@+id/qs_sel_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_btn3"
	/> 

<Button 
    android:id="@+id/qs_height_kbd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_btn3_1"
	/> 

<Button 
    android:id="@+id/qs_sel_skin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/qs_btn4"
	/> 

<Button 
    android:id="@+id/qs_where_ac_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClick"
	android:text="@string/set_key_ac_place_desc"
	/> 

<Button
    android:id="@+id/qs_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:onClick="onClick"
    android:text="@string/save" />

</LinearLayout>
</ScrollView>
</RelativeLayout>
