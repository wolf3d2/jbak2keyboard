<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
<Button
        android:id="@+id/runapp_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSave"
	    android:layout_alignParentRight="true"
        android:text="@string/runapp_save_favorite"
        />

<ScrollView 
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/runapp_save"
    android:layout_above="@+id/llad_runapp"
    android:padding="7dp"
    >

<LinearLayout
    android:id="@+id/runapp_all2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" 
    android:layout_above="@+id/llad_runapp"
    >

<TextView
        android:id="@+id/runapp_favorite_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/runapp_favorite"
        />
    
<TextView
    android:id="@+id/runapp_favorite_txt2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="---" />
    
<LinearLayout 
    android:id="@+id/runapp_ll_favorite"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    >
</LinearLayout>

<TextView
        android:id="@+id/runapp_all_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/runapp_all"
        />
    
<Button
        android:id="@+id/runapp_all_rescaning"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRescan"
        android:text="@string/runapp_rescaning"
        />
    
<ProgressBar
    android:id="@+id/runapp_load_progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:progress="0" />

<LinearLayout
    android:id="@+id/runapp_ll_all"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
</LinearLayout>

</LinearLayout>
</ScrollView>
<LinearLayout
    android:id="@+id/llad_runapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    
</LinearLayout>

</RelativeLayout>
